{
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "es2024",
      "esnext.collection"
    ],
    "module": "node16",
    "target": "es2024",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@deltic/mutex/*": [
        "./packages/mutex/src/*-mutex.ts"
      ],
      "@deltic/*": [
        "./packages/*/src/index.ts"
      ]
    }
  }
}